&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 400
      REL_CUTOFF 80
    &END MGRID
    &QS
      LS_SCF
    &END QS
    &LS_SCF
      MAX_SCF     25
      EPS_SCF     1.0E-8
      EPS_FILTER  1.0E-8
      S_PRECONDITIONER  NONE
      REPORT_ALL_SPARSITIES OFF
      PURIFICATION_METHOD TRS4
      EXTRAPOLATION_ORDER  1
      &PAO
        MAX_PAO 0
        PARAMETERIZATION EQUIVARIANT
        RESTART_FILE 2H2O_pao44_eval.pao
      &END PAO
    &END
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME coords.xyz
      COORD_FILE_FORMAT XYZ
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
    &KIND H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE
      PAO_BASIS_SIZE 4
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE
      PAO_BASIS_SIZE 4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT 2H2O_pao44_eval
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
